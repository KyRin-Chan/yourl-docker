{
  "extends": [
    "config:base",
    ":disableDependencyDashboard"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "matchStrings": [
        "FROM (?<depName>.*?):(?<currentValue>\\d+(?:\\.\\d+)*?)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "github-actions": {
    "enabled": false
  }
}
